<Window x:Class="Naterial.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Naterial.Demo"
        Background="{DynamicResource Brush.Surface}"
        Foreground="{DynamicResource Brush.OnSurface}"
        Width="1280"
        Height="720"
        MinWidth="320"
        MinHeight="320">

    <StackPanel Margin="8">
        <TextBlock Text="H1/Segoe UI/Light/82px"
                   FontSize="{StaticResource FontSize.Headline1}"
                   FontWeight="Light"
                   Margin="0 -8" />
        <TextBlock Text="H2/Segoe UI/Light/50px"
                   FontSize="{StaticResource FontSize.Headline2}"
                   FontWeight="Light" />
        <TextBlock Text="H3/Segoe UI/Regular/40px"
                   FontSize="{StaticResource FontSize.Headline3}"
                   FontWeight="Regular"
                   Margin="0 8 0 0"/>
        <TextBlock Text="H4/Segoe UI/Regular/28px"
                   FontSize="{StaticResource FontSize.Headline4}"
                   FontWeight="Regular"
                   Margin="0 8 0 0" />
        <TextBlock Text="H5/Segoe UI/Regular/20px"
                   FontSize="{StaticResource FontSize.Headline5}"
                   FontWeight="Regular"
                   Margin="0 8 0 0" />
        <TextBlock Text="H6/Segoe UI/Medium/16px"
                   FontSize="{StaticResource FontSize.Headline6}"
                   FontWeight="Medium"
                   Margin="0 8 0 0" />
        <TextBlock Text="Subtitle 1/Segoe UI/Regular/14px"
                   FontSize="{StaticResource FontSize.Subtitle1}"
                   FontWeight="Regular"
                   Margin="0 16 0 0" />
        <TextBlock Text="Subtitle 2/Segoe UI/Medium/12px"
                   FontSize="{StaticResource FontSize.Subtitle2}"
                   FontWeight="Medium"
                   Margin="0 8 0 0" />
        <TextBlock Text="Body 1/Segoe UI/Regular/14px"
                   FontSize="{StaticResource FontSize.Body1}"
                   FontWeight="Regular"
                   Margin="0 16 0 0" />
        <TextBlock Text="Body 2/Segoe UI/Regular/12px"
                   FontSize="{StaticResource FontSize.Body2}"
                   FontWeight="Regular"
                   Margin="0 8 0 0" />
        <TextBlock Text="BUTTON/SEGOE UI/MEDIUM/12PX"
                   FontSize="{StaticResource FontSize.Button}"
                   FontWeight="Medium"
                   Margin="0 16 0 0" />
        <TextBlock Text="Caption/Segoe UI/Regular/10px"
                   FontSize="{StaticResource FontSize.Caption}"
                   FontWeight="Regular"
                   Margin="0 16 0 0" />
        <TextBlock Text="OVERLINE/SEGOE UI/REGULAR/10PX"
                   FontSize="{StaticResource FontSize.Overline}"
                   FontWeight="Regular"
                   Margin="0 8 0 0" />
    </StackPanel>

</Window>
