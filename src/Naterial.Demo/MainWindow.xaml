<Window x:Class="Naterial.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:nd="http://schemas.naterial.com/winfx/xaml"
        Title="Naterial.Demo"
        FontFamily="{StaticResource FontFamily.Default}"
        FontSize="{StaticResource FontSize.Body2}"
        Background="{DynamicResource Brush.Surface}"
        Foreground="{DynamicResource Brush.OnSurface}"
        Width="1280"
        Height="720"
        MinWidth="320"
        MinHeight="320">

    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Border Background="{DynamicResource Brush.Primary}"
                Width="240"
                Height="48" />

        <Separator Background="{DynamicResource Brush.Outline.Variant}"
                   Margin="0 16" />

        <Border CornerRadius="{StaticResource CornerRadius.ExtraSmall}"
                Background="{DynamicResource Brush.Primary}"
                Width="240"
                Height="48" />
        <Border CornerRadius="{StaticResource CornerRadius.Small}"
                Background="{DynamicResource Brush.Primary}"
                Width="240"
                Height="48"
                Margin="0 8 0 0" />
        <Border CornerRadius="{StaticResource CornerRadius.Small.Top}"
                Background="{DynamicResource Brush.Primary}"
                Width="240"
                Height="48"
                Margin="0 8 0 0" />
        <Border CornerRadius="{StaticResource CornerRadius.Medium}"
                Background="{DynamicResource Brush.Primary}"
                Width="240"
                Height="48"
                Margin="0 8 0 0" />
        <Border CornerRadius="{StaticResource CornerRadius.Large}"
                Background="{DynamicResource Brush.Primary}"
                Width="240"
                Height="48"
                Margin="0 8 0 0" />
        <Border CornerRadius="{StaticResource CornerRadius.ExtraLarge}"
                Background="{DynamicResource Brush.Primary}"
                Width="240"
                Height="48"
                Margin="0 8 0 0" />

        <Separator Background="{DynamicResource Brush.Outline.Variant}"
                   Margin="0 16" />

        <Border nd:ShapeAssist.CornerRadius="24"
                Background="{DynamicResource Brush.Primary}"
                Width="240"
                Height="48"
                Margin="0 8 0 0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius"
                            Value="{Binding Path=(nd:ShapeAssist.CornerRadius), RelativeSource={RelativeSource Self}}" />
                </Style>
            </Border.Style>
        </Border>
    </StackPanel>

</Window>
